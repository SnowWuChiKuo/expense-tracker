<div class="container">
  <div class="row">
    <div class="d-flex justify-content-center">
      <h2 class="text-center m-3">*必填欄位</h2>
      <h3 class="text-center m-3">請輸入你的支出</h3>
    </div>

    <form action="/records/{{record._id}}/edit?_method=PUT" method="post">
      <div class="container w-50 p-2">
        <div class="form-group">
          <label for="name" class="mt-3">名稱*:</label>
          <input type="text" id="name" name="name" class="form-control" value="{{ record.name }}" required>
        </div>

        <div class="form-group">
          <label for="date" class="mt-3">日期*:</label>
          <input type="date" id="date" name="date" class="form-control" value="{{ record.date }}" required>
        </div>

        <div class="form-group">
          <label for="category" class="mt-3">類別*:</label>
          <select class="form-select" name="category" id="category">
            {{#if recordCategory}}
            <option value="{{ recordCategory }}" selected>{{ recordCategory }}</option>
            {{/if}}
            {{#each otherCategory}}
            <option value="{{ this }}">{{ this }}</option>
            {{/each}}
          </select>
        </div>

        <div class="form-group ">
          <label for="amount" class="mt-3">金額*:</label>
          <input type="number" id="amount" name="amount" class="form-control" value="{{ record.amount }}" required>
        </div>

        <div class="text-center mt-3">
          <button type="submit" class="btn btn-primary">
            儲存修改
          </button>
          <a href="/">
            <button type="button" class="btn btn-outline-secondary">
              返回首頁
            </button>
          </a>
          {{! 使用type="reset" 可以清除/還原輸入 }}
          <button type="reset" class="btn btn-outline-danger">還原輸入</button>
        </div>

      </div>
    </form>
  </div>
</div>